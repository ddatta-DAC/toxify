SAMPLES, = glob_wildcards("{sequence}.seq")


rule final:
    input: expand("{sequence}.blastout",sequence=SAMPLES)

rule diamond:
    input:
        "{sequence}.seq"
    output:
        "{sequence}.blastout"
    shell:
        "diamond blastp -d /home/brewerlab/nr_database/diamond_db.dmnd -q {input} -o {output} -p {threads}   -f 6 sseqid sseq qseqid qseq  -k 1000"
